{% extends "base.twig" %}

{% block title %}
    Connexion - {{ parent() }}
{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-lg-4 mx-auto">
                <form method="post">
                    <h1 class="h3 mb-3 fw-normal text-center">Connectez-vous</h1>

                    {% if error is not empty %}
                        {% for err in error %}
                            <div class="alert alert-dismissible alert-danger">
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                {{ err|raw }}
                            </div>
                        {% endfor %}
                    {% endif %}

                    <div class="form-group mb-3">
                        <label for="email">Adresse email</label>
                        <input type="email" class="form-control" id="email" name="email">
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Mot de passe</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>

                    <div class="text-center">
                        <button class="w-100 btn btn-lg btn-primary mb-3" type="submit">Se connecter</button>
                        <a href="{{ route(router, 'session-register') }}" class="btn btn-secondary btn-sm mb-3 w-100">Je
                            n'ai pas de compte</a>
                        <a href="{{ route(router, 'main-home') }}" class="btn btn-link mb-3">Retour Ã  l'accueil</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
