{% extends "base.twig" %}

{% block title %}
    {{ post.title }} - {{ parent() }}
{% endblock %}


{% block content %}
    <main>
        <section class="bg-with-image" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url({{ post.image }})">
            <div class="container h-100">
                <h1>{{ post.title }}</h1>
            </div>
        </section>
        <section class="container">
            <div class="row">
                <div class="col-12">
                    {{ post.content|raw }}
                </div>
            </div>
        </section>
    </main>
{% endblock content %}